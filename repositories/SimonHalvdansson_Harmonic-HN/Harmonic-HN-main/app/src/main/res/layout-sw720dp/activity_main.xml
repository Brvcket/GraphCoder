<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragments_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_stories_container"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.simon.harmonichackernews.StoriesFragment" />

    <Space
        android:layout_width="@dimen/margin_between_panes"
        android:layout_height="match_parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_comments_container"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:name="com.simon.harmonichackernews.CommentsFragment" />

</LinearLayout>
